<div align="center">
  <%= form_tag('/users', method: :get, class:"navbar-form navbar-center") do %>
  <%= text_field_tag :search, params[:search], class:"form-control" %>
  <%= submit_tag "Search", :name => nil, class:"mike-btn btn btn-outline-success my-2 my-sm-0" %>
  <br></br>

<% end %>
<%= will_paginate %>

<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title"><%= link_to user.username, user_path(user) %></li>
        <li>
          <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
        </li>
        <li>
          <%= link_to "Send Message", message_path(:from=> current_user.username, :to=>user.username), method: 'post', class: "btn btn-xs btn-primary" %>
          <%= link_to "Remove Friend", removefriend_path(:friend=> user.username), method: 'delete', class: "btn btn-xs btn-danger" %>
        </li>
      </div>
    </div>
  </ul>
<% end %>

</div>