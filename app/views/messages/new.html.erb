<%= render 'shared/errors', obj: @message %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@message, :url => url_for(:controller => 'messages', :action => 'create'), :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :From %>
      </div>
      <div class="col-sm-6">
        <%= f.label @message.from %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :To %>
      </div>
      <div class="col-sm-6">
        <%= f.label @message.to %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Body %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :body, class: "form-control", placeholder: "Enter Message" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit( value: 'Send Message', class: 'btn btn-primary btn-large') %>
      </div>
    </div>
  <% end %>
</div>
</div>