<div class="row">
  <div class="col-md-4 col-md-offset-5 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<h3 class="mike-h3" align="center"><%= @user.username.capitalize %>'s Articles</h3>
<% if @user == current_user %>
  <%= render 'shared/user_articles', obj: @user.articles %>
<% else %>
  <%= render 'shared/user_articles', obj: @user.articles.where(:private=>false) %>
<% end %>
<div align="center">
  <%= will_paginate @user_articles %>
</div>